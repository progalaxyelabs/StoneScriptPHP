{
    "name": "progalaxyelabs/stone-script-php",
    "description": "A minimalistic backend framework for building APIs using PHP and PostgreSQL",
    "type": "project",
    "license": "MIT",
    "scripts": {
        "post-create-project-cmd": [
            "chmod +x generate-openssl-keypair.sh",
            "./generate-openssl-keypair.sh",
            "chmod -x generate-openssl-keypair.sh",
            "@generate-dotenv"
        ],
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "php serve.php"
        ],
        "generate-dotenv": [
            "php generate-dotenv.php"
        ]
    },
    "require": {
        "php": ">=8.2",
        "firebase/php-jwt": "^6.11",
        "phpoffice/phpspreadsheet": "^4.2",
        "google/apiclient": "^2.0"
    }
}