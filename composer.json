{
    "name": "progalaxyelabs/stonescriptphp",
    "description": "Modern PHP framework with contract-based routing and auto-generated TypeScript clients",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "framework",
        "php",
        "typescript",
        "api",
        "rest",
        "code-generation",
        "postgresql"
    ],
    "homepage": "https://stonescriptphp.org",
    "support": {
        "issues": "https://github.com/progalaxyelabs/StoneScriptPHP/issues",
        "source": "https://github.com/progalaxyelabs/StoneScriptPHP",
        "docs": "https://stonescriptphp.org/docs"
    },
    "authors": [
        {
            "name": "StoneScriptPHP Team",
            "email": "team@progalaxyelabs.com",
            "homepage": "https://stonescriptphp.org"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-pdo": "*",
        "ext-pdo_pgsql": "*",
        "ext-json": "*",
        "ext-redis": "*",
        "firebase/php-jwt": "^6.11",
        "phpoffice/phpspreadsheet": "^5.0",
        "google/apiclient": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "bin": ["stone"],
    "autoload": {
        "psr-4": {
            "Framework\\": "Framework/",
            "App\\": "src/App/"
        },
        "files": [
            "Framework/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "@setup-interactive"
        ],
        "post-install-cmd": [
            "php -r \"if (!file_exists('stone') && !file_exists('.env')) { echo '\\nâœ… StoneScriptPHP installed! Initialize your project with:\\n   vendor/bin/stone init\\n\\n'; }\""
        ],
        "setup-interactive": [
            "php stone setup"
        ],
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "php stone serve"
        ],
        "test": "phpunit",
        "migrate": "php stone migrate"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "archive": {
        "exclude": [
            "/integration-tests",
            "/.github",
            "/tests"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
