{
    "name": "progalaxyelabs/stone-script-php",
    "description": "A modern PHP backend framework for building APIs with PostgreSQL (inspired by Angular)",
    "type": "project",
    "license": "MIT",
    "keywords": ["framework", "api", "php", "postgresql", "backend", "rest"],
    "homepage": "https://github.com/progalaxyelabs/StoneScriptPHP",
    "support": {
        "issues": "https://github.com/progalaxyelabs/StoneScriptPHP/issues",
        "source": "https://github.com/progalaxyelabs/StoneScriptPHP",
        "docs": "https://github.com/progalaxyelabs/StoneScriptPHP/wiki"
    },
    "authors": [
        {
            "name": "ProgalaxyElabs",
            "email": "pradeepkumardesk@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "ext-pdo": "*",
        "ext-pgsql": "*",
        "firebase/php-jwt": "^6.11",
        "phpoffice/phpspreadsheet": "^4.2",
        "google/apiclient": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Framework\\": "Framework/",
            "App\\": "src/App/"
        },
        "files": [
            "Framework/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "@setup-interactive"
        ],
        "setup-interactive": [
            "php stone setup"
        ],
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "php stone serve"
        ],
        "test": "phpunit",
        "migrate": "php stone migrate"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
