{
    "name": "progalaxyelabs/stonescriptphp",
    "description": "Modern PHP backend framework for building APIs with PostgreSQL. Features: Angular-like CLI, PostgreSQL-first architecture, JWT authentication with OAuth support, request validation, code generators for routes and models, production-ready logging and exception handling, RBAC, optional Redis caching.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "framework",
        "php",
        "typescript",
        "api",
        "rest",
        "code-generation",
        "postgresql"
    ],
    "homepage": "https://stonescriptphp.org",
    "support": {
        "issues": "https://github.com/progalaxyelabs/StoneScriptPHP/issues",
        "source": "https://github.com/progalaxyelabs/StoneScriptPHP",
        "docs": "https://stonescriptphp.org/docs"
    },
    "authors": [
        {
            "name": "StoneScriptPHP Team",
            "email": "team@progalaxyelabs.com",
            "homepage": "https://stonescriptphp.org"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-pdo": "*",
        "ext-pdo_pgsql": "*",
        "ext-json": "*",
        "firebase/php-jwt": "^6.11",
        "phpoffice/phpspreadsheet": "^5.0",
        "google/apiclient": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "suggest": {
        "ext-redis": "Required for Redis caching support"
    },
    "autoload": {
        "psr-4": {
            "Framework\\": ""
        },
        "files": [
            "functions.php",
            "bootstrap.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "archive": {
        "exclude": [
            "/integration-tests",
            "/.github",
            "/tests",
            "/docs",
            "/examples",
            "/.git",
            "/.env",
            "/.env.*",
            "*.pem",
            "*.pub",
            "*.key",
            "*.log",
            "/logs",
            "/uploads",
            "/.idea",
            "/.vscode",
            "/.phpunit.cache",
            "/vendor",
            "/node_modules",
            "GITHUB-PACKAGIST-RELEASE.md",
            "PHASE-*.md"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
