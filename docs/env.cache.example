# Redis Cache Configuration
# Add these settings to your .env file to enable Redis caching

# Redis Server Configuration
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_PREFIX=stonescript:

# Cache Settings
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=3600

# Optional: Different configurations for different environments
# Development (local Redis)
# REDIS_HOST=127.0.0.1
# REDIS_PORT=6379

# Production (remote Redis with authentication)
# REDIS_HOST=redis.example.com
# REDIS_PORT=6379
# REDIS_PASSWORD=your_secure_password
# REDIS_DATABASE=0

# Staging
# REDIS_HOST=staging-redis.example.com
# REDIS_PORT=6379
# REDIS_DATABASE=1

# To disable caching (useful for debugging)
# CACHE_ENABLED=false
