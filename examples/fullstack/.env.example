# Application Environment
APP_ENV=development
APP_NAME=WebMeteor

# Database Configuration (PostgreSQL 16)
DB_HOST=db
DB_PORT=5432
DB_NAME=webmeteor
DB_USER=webmeteor_user
DB_PASSWORD=your_secure_password_here

# API Service
API_PORT=8080
API_URL=http://localhost:8080

# Frontend (WWW) Service
WWW_PORT=80
WWW_URL=http://localhost

# Alert Service (Socket.IO)
ALERT_PORT=3001
ALERT_URL=http://localhost:3001

# Security (Generate secure keys in production)
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_key_here

# CORS Settings
CORS_ORIGIN=http://localhost

# Email Configuration (Optional)
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@webmeteor.com
MAIL_FROM_NAME=WebMeteor

# Storage
UPLOAD_MAX_SIZE=10M
STORAGE_PATH=/var/www/html/storage

# Logging
LOG_LEVEL=info
