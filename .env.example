# Application
DEBUG_MODE=false
TIMEZONE=UTC

# Database - Gateway Connection (Required in v3+)
DB_GATEWAY_URL=http://localhost:9000
DB_GATEWAY_PLATFORM=stonescriptphp
#DB_GATEWAY_TENANT_ID=

# Gateway Schema Management (for gateway:register and gateway:migrate CLI commands)
PLATFORM_ID=stonescriptphp
SCHEMA_NAME=v1_0
DATABASE_ID=main
#ADMIN_TOKEN=                             # Required for gateway:register (POST /admin/database/create)

# JWT - Single Issuer Mode (default)
JWT_PRIVATE_KEY_PATH=./keys/jwt-private.pem
JWT_PUBLIC_KEY_PATH=./keys/jwt-public.pem
#JWT_PRIVATE_KEY_PASSPHRASE=
JWT_ISSUER=example.com
JWT_ACCESS_TOKEN_EXPIRY=900
JWT_REFRESH_TOKEN_EXPIRY=15552000

# Multi-Auth Server Support (optional)
# Use this for validating tokens from multiple issuers
# Format: JSON array of auth server configurations
# Example:
# AUTH_SERVERS='{"customer":{"issuer":"https://auth.example.com","jwks_url":"https://auth.example.com/auth/jwks","audience":"api","cache_ttl":3600},"employee":{"issuer":"https://admin-auth.example.com","jwks_url":"https://admin-auth.example.com/auth/jwks","audience":"admin-api","cache_ttl":3600}}'
#AUTH_SERVERS=

# Security (optional)
#CSRF_SECRET_KEY=
#HCAPTCHA_SITE_KEY=
#HCAPTCHA_SECRET_KEY=

# Email (optional)
EMAIL_VERIFICATION_ENABLED=true
#ZEPTOMAIL_BOUNCE_ADDRESS=
#ZEPTOMAIL_SENDER_EMAIL=
#ZEPTOMAIL_SENDER_NAME=
#ZEPTOMAIL_SEND_MAIL_TOKEN=
